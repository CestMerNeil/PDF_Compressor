{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDF Compressor",
  "version": "1.0.0",
  "identifier": "com.pdfcompressor.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PDF Compressor",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "PDF Compressor Team",
    "copyright": "Copyright Â© 2025 PDF Compressor Team. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Professional PDF compression tool",
    "longDescription": "A modern PDF compression application with built-in optimization engine and professional quality presets.",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
