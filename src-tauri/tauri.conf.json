{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDF Compressor",
  "version": "3.0.0",
  "identifier": "com.pdfcompressor.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PDF Compressor",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "PDF Compressor Team",
    "copyright": "Copyright Â© 2025 PDF Compressor Team. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Professional PDF compression tool",
    "longDescription": "A professional PDF compression tool with multiple quality presets and Ghostscript integration for optimal compression results.",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.0-37 | libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English", "SimpChinese"],
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "allowDowngrades": true
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": null
    }
  }
}
